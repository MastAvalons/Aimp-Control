<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_height"
    android:paddingBottom="3dp"
    android:paddingTop="3dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="6dp"
        android:paddingTop="0dp"
        android:paddingRight="34dp"
        android:paddingBottom="0dp"
        android:background="@drawable/mobile_search_bg"
        android:singleLine="true"
        android:textColor="@color/pls_search_hint"
        android:textSize="@dimen/search_hint_size"
        android:hint="@string/search_hint"
        android:textColorHint="@color/pls_search_hint"
        android:lines="1"
        android:imeOptions="actionDone"
        />

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/mobile_search_clear_input"
        android:visibility="gone"
        />

</RelativeLayout>